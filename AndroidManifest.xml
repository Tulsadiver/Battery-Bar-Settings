<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pvy.battbar.settings"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
        <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".options" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="pvyMods Battery Bar"
            android:name=".AboutActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <service android:name="com.pvy.batterybar.service.BarHost"
		    android:label="AppMan Updates Service"  >
			<intent-filter>
				<action android:name="com.pvy.battbar.settings.util.BarHost" android:label="BatteryBar Service"/>
				
			</intent-filter>
		</service>
            
    </application>

</manifest>